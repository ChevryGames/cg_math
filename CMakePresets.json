{
  "version": 1,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "generator-default",
      "hidden": "TRUE",
      "displayName": "Default Generator Config",
      "description": "Default build using MSYS generator",
      "generator": "MSYS Makefiles"
    },
    {
      "name": "architecture-default",
      "hidden": "TRUE",
      "displayName": "Default Architecture Config",
      "description": "Default build for x64 architecture",
      "architecture": {
        "value": "x64"
      }
    },
    {
      "name": "build-type-debug",
      "hidden": "TRUE",
      "displayName": "Default Debug Config",
      "description": "Default debug build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "build-type-release",
      "hidden": "TRUE",
      "displayName": "Default Release Config",
      "description": "Default release build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug-default",
      "inherits": [
        "generator-default",
        "architecture-default",
        "build-type-debug"
      ],
      "displayName": "Default Debug Config",
      "description": "Default debug build using MSYS generator for x64",
      "binaryDir": "${sourceDir}/build/debug"
    },
    {
      "name": "release-default",
      "inherits": [
        "generator-default",
        "architecture-default",
        "build-type-release"
      ],
      "displayName": "Default Release Config",
      "description": "Default release build using MSYS generator for x64",
      "binaryDir": "${sourceDir}/build/release"
    },
    {
      "name": "default",
      "inherits": "debug-default",
      "displayName": "Default Config",
      "description": "Default debug build using MSYS generator for x64"
    }
  ]
}